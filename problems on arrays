1. Sum and average using arrays

#include<stdio.h>
int main()
{
    int a[10],sum,n,i;
    float avg;
    printf("Enter the size of a number :");
    scanf("%d",&n);
    for(i=0;i<n;i++){
        printf("Enter the number %d :",i+1);
        scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    sum=sum+=a[i];
    avg=(float)sum/n;
    printf("The sum of the given number is :%d\n",sum);
    printf("The average of the given number is :%f\n",avg);
    return 0;
}
