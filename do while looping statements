//basic code
#include<stdio.h>

int main()
{
    int i=1;
    do
    {
        printf("Hello world\n");
        i++;
    }while(i<1);
    
    return 0;
}

//infinite loop
#include<stdio.h>

int main()
{
    int i=2;
    do
    {
        printf("Hello world\n");
        i++;
    }while(i>1);
    
    return 0;
}
