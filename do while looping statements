//basic code
#include<stdio.h>

int main()
{
    int i=1;
    do
    {
        printf("Hello world\n");
        i++;
    }while(i<1);
    
    return 0;
}

//infinite loop
#include<stdio.h>

int main()
{
    int i=2;
    do
    {
        printf("Hello world\n");
        i++;
    }while(i>1);
    
    return 0;
}

//False condition program
#include<stdbool.h>
#include<stdio.h>

int main()
{
    bool condition=false;
    do{
        printf("This is loop body");
    }while(condition);
    
    return 0;
}

//multiplication table using do while
#include<stdio.h>

int main()
{
   int N=5,i=1;
   
   do{
       printf("%d\tx\t%d\t=\t%d\n",N,i,N*i);
   }while(i++<10);
   
    return 0;
}
