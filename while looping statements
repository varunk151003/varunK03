//basic program
#include<stdio.h>

int main()
{
    int i=2;
    while(i<10)
    {
        printf("Hello world\n");
        i++;
    }
    return 0;
}

//infinit loop program 1
#include<stdio.h>

int main()
{
    int i=  1;
    while(i==1)
    {
        printf("%d\n",i); 
    }
    return 0;
}

//infinite loop program 2
#include<stdio.h>

int main()
{
    int gfg1=1;
    int gfg2=1;
    
    while(gfg1<10)
    {
        gfg2=gfg2+1;
        printf("GeeksforGeeks to infinity\n");
    }
    
    return 0;
}
