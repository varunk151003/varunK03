//2 dimensional array with numbers

#include<stdio.h>
int main()
{
    int arr[2][3];
    printf("2D array:\n");
    
    for(int i=0;i<2;i++){
        for(int j=0;j<3;j++){
            printf("\nEnter the number or character :");
            scanf("%d",&arr[i][j]);
        }
        
        printf("\n");
    }
    
    printf("The 2D array is:\n");
    for(int i=0;i<2;i++){
        for(int j=0;j<3;j++){
            printf("%d ",arr[i][j]);
        }
        printf("\n");
    }
    return 0;
}

//2 Dimensional array with characters

#include<stdio.h>
int main()
{
    int arr[2][3];
    printf("2D array:\n");
    
    for(int i=0;i<2;i++){
        for(int j=0;j<3;j++){
            printf("\nEnter the number or character :");
            scanf("%s",&arr[i][j]);
        }
        
        printf("\n");
    }
    
    printf("The 2D array is:\n");
    for(int i=0;i<2;i++){
        for(int j=0;j<3;j++){
            printf("%c ",arr[i][j]);
        }
        printf("\n");
    }
    return 0;
}

//user defined input using printf() and scanf()

#include<stdio.h>
int main()
{
  int n=5;
  int arr[n];
  
  for(int i=0;i<n;i++){
    printf("\nEnter the number or character %d :",i+1);
    scanf("%d",&arr[i]);
  }
  
  //arr[2]=100;
  printf("The array elements are:");
  for(int i=0;i<n;i++){
    printf("\n%d ",arr[i]);
  }
  
  return 0;
}
