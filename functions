//arithmetic operations using functions

#include<stdio.h>
int addition(int a,int b){
    int sum = a+b;
    return(sum);
}
int sub(int a,int b){
    int difference = a-b;
    return(difference);
}
int multiplication(int a,int b){
    int product = a*b;
    return(product);
}
int division(int a,int b){
    int quotient = a/b;
    return(quotient);
}
int main()
{
    int x,y;
    printf("Enter the first and second value :\n");
    scanf("%d%d",&x,&y);
    int result1 = addition(x,y);
    int result2 = sub(x,y);
    int result3 = multiplication(x,y);
    int result4 = division(x,y);
    printf("Addition of %d and %d is :%d\n",x,y,result1);
    printf("subtraction of %d and %d is :%d\n",x,y,result2);
    printf("Multiplication of %d and %d is :%d\n",x,y,result3);
    printf("Division of %d and %d is :%d\n",x,y,result4);
    
    return 0;
}



//condition to check if any values are zero and to change both values inside multiplication function

int multiplication(int a,int b){
    int product = a*b;
    if(a==0 || b==0){
        printf("Multiplication doesnot performs with zero\n");
        int g,h;
        printf("Please re-enter the value again :\n");
        scanf("%d %d",&g,&h);
        return(g*h);
    }

//condition to check whether the particular given value is zero and to change its value

int multiplication(int a,int b){
    if(a==0){
        printf("WARNING :  First value = 0, Multiplication doesnot performs with zero\n");
        int g;
        printf("Please re-enter the value again :\n");
        scanf("%d",&g);
        return(g*b);
    }
    else if(b==0){
        printf("WARNING : second value = 0, Multiplication doesnot performs with zero\n");
        int h;
        printf("Please re-enter the value again :\n");
        scanf("%d",&h);
        return(a*h);
    }
    else{
        return(a*b);
    }

//Fibonacci series using functions

#include<stdio.h>
int fibonacci(int num){
    if(num==0 || num==1){
        return num;
    }
    else{
        return fibonacci(num-1)+fibonacci(num-2);
    }
}
int main()
{
    int a,val,add;
    printf("how many numbers do you want to print? :\n");
    scanf("%d",&a);
    printf("The Fibonacci series of first %d numbers are : ",a);
    for(int i=0;i<a;i++){
        val=fibonacci(i);
        printf("%d ",val);
    }
    add=sum(val);
    printf("The sum of the fibonacci series are : %d",add);

    return 0;
}
int sum(int num){
    printf("\nnum value :: %d\n",num);
    if(num==0){
        return num;
    }
    else{
        printf("Logic : %d+%d \n",num,num-1);
        return num+sum(num-1);
    }
}
